<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">


    <changeSet id="15443-7" author="mohamed salah">
        <createTable tableName="project">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_project"/>
            </column>
            <column name="version" type="INT"/>
            <column name="arabic_name" type="VARCHAR(255)"/>
            <column name="english_name" type="VARCHAR(255)"/>
            <column name="code" type="VARCHAR(255)"/>
            <column name="enabled" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet id="415-44" author="mohamed salah">
        <createTable tableName="time_sheet_detail">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_time_sheet_detail"/>
            </column>
            <column name="version" type="INT"/>
            <column name="overtime" type="DATE"/>
            <column name="overtime_hours" type="FLOAT"/>
            <column name="start_time" type="FLOAT"/>
            <column name="end_time" type="FLOAT"/>
            <column name="time_hours" type="FLOAT"/>
            <column name="task_id" type="INT"/>
            <column name="task_desc" type="VARCHAR(255)"/>
            <column name="approval_status" type="boolean"/>
            <column name="billable" type="boolean"/>
            <column name="comments" type="VARCHAR(255)"/>
            <column name="employees_id" type="INT"/>

        </createTable>
    </changeSet>

    <changeSet id="45-32" author="mohamed salah">
        <addForeignKeyConstraint baseColumnNames="employees_id" baseTableName="time_sheet_detail"
                                 constraintName="FK_46" referencedColumnNames="id"
                                 referencedTableName="employees"/>
    </changeSet>


</databaseChangeLog>