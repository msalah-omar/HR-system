<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="mohamed salah">
        <createTable tableName="branches">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_branches"/>
            </column>
            <column name="version" type="INT"/>
            <column name="arabicName" type="VARCHAR(255)"/>
            <column name="englishName" type="VARCHAR(255)"/>
            <column name="code" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="enabled" type="boolean"/>
        </createTable>
    </changeSet>


    <changeSet id="2" author="mohamed salah">
        <createTable tableName="document_type">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_document_type"/>
            </column>
            <column name="version" type="INT"/>
            <column name="arabic_name" type="VARCHAR(255)"/>
            <column name="english_name" type="VARCHAR(255)"/>
            <column name="code" type="VARCHAR(255)"/>
            <column name="enabled" type="boolean"/>
        </createTable>
    </changeSet>




    <changeSet  id="3-vvv" author="mohamed salah" >
        <insert tableName="document_type">
            <column  name="arabic_name"  value="صوره البطاقه"/>
            <column  name="english_name"  value="image identity"/>
            <column  name="code"  value="IDENTITY"/>
        </insert>

        <insert tableName="document_type">
            <column  name="arabic_name"  value="صوره شخصيه"/>
            <column  name="english_name"  value="image personal"/>
            <column  name="code"  value="PERSONAL"/>
        </insert>

    </changeSet>

    <changeSet  id="4-vvv" author="mohamed salah" >
        <insert tableName="document_type">
            <column  name="arabic_name"  value="السيره الذاتيه"/>
            <column  name="english_name"  value="CV"/>
            <column  name="code"  value="CV"/>
        </insert>
    </changeSet>


    <changeSet id="6-n" author="mohamed salah">
        <createTable tableName="department">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_department"/>
            </column>
            <column name="version" type="INT"/>
            <column name="arabicName" type="VARCHAR(255)"/>
            <column name="englishName" type="VARCHAR(255)"/>
            <column name="code" type="VARCHAR(255)"/>
            <column name="enabled" type="boolean"/>

        </createTable>
    </changeSet>

    <changeSet id="-7-l" author="mohamed salah">
        <createTable tableName="document">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_document"/>
            </column>
            <column name="version" type="INT"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="modified_by" type="VARCHAR(255)"/>
            <column name="created_date" type="DATETIME"/>
            <column name="modified_date" type="DATETIME"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="path" type="VARCHAR(255)"/>
            <column name="media_type" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="document_type_id" type="INT"/>
        </createTable>

    </changeSet>

    <changeSet id="2-5" author="mohamed salah">
        <addForeignKeyConstraint baseColumnNames="document_type_id" baseTableName="document"
                                 constraintName="FK_1" referencedColumnNames="id"
                                 referencedTableName="document_type"/>
    </changeSet>

    <changeSet id="2145-4" author="mohamed salah">
        <addForeignKeyConstraint baseColumnNames="branch_id" baseTableName="employees"
                                 constraintName="FK_2" referencedColumnNames="id"
                                 referencedTableName="branches"/>
    </changeSet>

    <changeSet id="5453-5" author="mohamed salah">
        <addForeignKeyConstraint baseColumnNames="department_id" baseTableName="employees"
                                 constraintName="FK_3" referencedColumnNames="id"
                                 referencedTableName="department"/>
    </changeSet>



    <changeSet id="5-s" author="mohamed salah">
        <createTable tableName="employees">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_employees"/>
            </column>
            <column name="version" type="INT"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="modified_by" type="VARCHAR(255)"/>
            <column name="created_date" type="DATETIME"/>
            <column name="modified_date" type="DATETIME"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(255)"/>
            <column name="age" type="VARCHAR(255)"/>
            <column name="dateOfBirth" type="VARCHAR(255)"/>
            <column name="mobile" type="VARCHAR(255)"/>
            <column name="maritalStatus" type="VARCHAR(255)"/>
            <column name="nationalId" type="VARCHAR(255)"/>
            <column name="educationalQualification" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="directManager" type="VARCHAR(255)"/>
            <column name="branch_id" type="INT"/>
            <column name="department_id" type="INT"/>
        </createTable>
    </changeSet>


</databaseChangeLog>